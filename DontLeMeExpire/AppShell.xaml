<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DontLeMeExpire.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DontLeMeExpire"
    xmlns:views ="clr-namespace:DontLeMeExpire.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="DontLeMeExpire">
    <!-- Kopfzeile-->
    <Shell.FlyoutHeader>
        <Border
            Margin="0"
            Padding="24"
            BackgroundColor="#3d6dcc"
            StrokeThickness="0">
            <VerticalStackLayout Margin="10">
                <Label
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="Don't let me expire"
                    TextColor="White" />
            </VerticalStackLayout>
        </Border>
    </Shell.FlyoutHeader>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

       <ShellContent
        Title="ProduktPage"
        ContentTemplate="{DataTemplate views:ProduktPage}"
        Route="ProduktPage" />


</Shell>
