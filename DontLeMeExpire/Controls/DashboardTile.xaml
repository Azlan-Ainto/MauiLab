<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"             
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"   
    xmlns:controls="clr-namespace:DontLeMeExpire.Controls"
    x:Class="DontLeMeExpire.Controls.DashboardTile">

    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Border
                x:DataType="controls:DashboardTile"
                BackgroundColor="White"
                Stroke="{TemplateBinding BorderColor}"
                StrokeShape="RoundRectangle 8">

                <Grid
                    Padding="8"
                    ColumnDefinitions="*,*"
                    HeightRequest="98"
                    RowDefinitions="auto, *">

                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="{TemplateBinding Icon}" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="{TemplateBinding Count}"
                        TextColor="{TemplateBinding CountColor}" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        FontSize="20"
                        Text="{TemplateBinding Text}"
                        VerticalOptions="End" />

                </Grid>
                
                
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
    
    
</ContentView>
