<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DontLeMeExpire.MainPage">

    <ScrollView>

        <Grid 
            Padding="8"
            ColumnDefinitions="*,*" 
            ColumnSpacing="16" 
            RowDefinitions="100,100,auto,*,48" 
            RowSpacing="10">

            <Border
                Grid.Row="0"
                Grid.Column="0"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 8">
                <Grid
                    Padding="8"
                    ColumnDefinitions="*,*"
                    HeightRequest="98"
                    RowDefinitions="auto,*">
                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        FontAttributes="Bold" 
                        FontSize="Medium" 
                        HorizontalOptions="End" 
                        Text="12" />
                    <Label 
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="2" 
                        FontSize="Medium" 
                        Text="Mein Vorrat" 
                        HorizontalOptions="StartAndExpand" />

                </Grid>
            </Border>

            <Border 
                Grid.Row="0" 
                Grid.Column="1"
                BackgroundColor="White" 
                Stroke="Green" 
                StrokeShape="RoundRectangle 8">
                
                
                <Grid 
                    Padding="8" 
                    ColumnDefinitions="*,*" 
                    HeightRequest="98" 
                    RowDefinitions="auto,*">
                    
                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="3"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="End"
                        TextColor="Green" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        FontSize="Medium"
                        Text="Läuft bald ab"
                        VerticalOptions="End" />

                </Grid>
                
            </Border>
            <Border 
                Grid.Row="1" 
                Grid.Column="0" 
                BackgroundColor="White" 
                Stroke="Orange" 
                StrokeShape="RoundRectangle 8">
                <Grid 
                    Padding="8" 
                    ColumnDefinitions="*,*" 
                    HeightRequest="98" 
                    RowDefinitions="auto,*">

                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="1"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="End"
                        TextColor="Orange" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="Läuft heute ab !"
                        FontSize="Medium"
                        VerticalOptions="End" />

                </Grid>
            </Border>

            <Border 
                Grid.Column="1" 
                Grid.Row="1" 
                BackgroundColor="White" 
                Stroke="Red" 
                StrokeShape="RoundRectangle 8">
                <Grid 
                    Padding="8" 
                    ColumnDefinitions="*,*" 
                    HeightRequest="98" 
                    RowDefinitions="auto, *">
                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="12"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        TextColor="Red" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="Abgelaufen !"
                        FontSize="Medium"
                        VerticalOptions="End" />

                </Grid>
                
            </Border>
            
        </Grid>
        
    </ScrollView>

</ContentPage>
