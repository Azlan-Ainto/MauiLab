<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:DontLeMeExpire.ViewModels" 
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"

    Padding="16"
    x:Class="DontLeMeExpire.MainPage"
    x:DataType="viewModels:MainViewModel">

    <ScrollView>

        <Grid 
            Padding="8"
            ColumnDefinitions="*,*" 
            ColumnSpacing="16" 
            RowDefinitions="100,100,auto,*,48" 
            RowSpacing="10">

            <Border
                Grid.Row="0"
                Grid.Column="0"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 8">
                <Grid
                    Padding="8"
                    ColumnDefinitions="*,*"
                    HeightRequest="98"
                    RowDefinitions="auto,*">
                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        d:Text="{Binding AnzahlProdukte}"
                        FontAttributes="Bold" 
                        FontSize="Medium" 
                        HorizontalOptions="End"  />
                    <Label 
                        Grid.Row="1" 
                        Grid.Column="0" 
                        Grid.ColumnSpan="2" 
                        FontSize="Medium" 
                        Text="Mein Vorrat" 
                        HorizontalOptions="StartAndExpand" />

                </Grid>
            </Border>

            <Border 
                Grid.Row="0" 
                Grid.Column="1"
                BackgroundColor="White" 
                Stroke="Green" 
                StrokeShape="RoundRectangle 8">
                
                
                <Grid 
                    Padding="8" 
                    ColumnDefinitions="*,*" 
                    HeightRequest="98" 
                    RowDefinitions="auto,*">
                    
                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding AnzahlBaldAbgelaufenenProdukten}"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="End"
                        TextColor="Green" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        FontSize="Medium"
                        Text="Läuft bald ab"
                        VerticalOptions="End" />

                </Grid>
                
            </Border>
            <Border 
                Grid.Row="1" 
                Grid.Column="0" 
                BackgroundColor="White" 
                Stroke="Orange" 
                StrokeShape="RoundRectangle 8">
                <Grid 
                    Padding="8" 
                    ColumnDefinitions="*,*" 
                    HeightRequest="98" 
                    RowDefinitions="auto,*">

                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding AnzahlHeuteAbgelaufenenProdukten}"
                        FontAttributes="Bold"
                        FontSize="Medium"
                        HorizontalOptions="End"
                        TextColor="Orange" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="Läuft heute ab !"
                        FontSize="Medium"
                        VerticalOptions="End" />

                </Grid>
            </Border>

            <Border 
                Grid.Column="1" 
                Grid.Row="1" 
                BackgroundColor="White" 
                Stroke="Red" 
                StrokeShape="RoundRectangle 8">
                <Grid 
                    Padding="8" 
                    ColumnDefinitions="*,*" 
                    HeightRequest="98" 
                    RowDefinitions="auto, *">
                    <Image
                        HeightRequest="40"
                        HorizontalOptions="Start"
                        Source="dotnet_bot.png"/>
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding AnzahlAbgelaufenenProdukten}"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        HorizontalOptions="End"
                        TextColor="Red" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Text="Abgelaufen !"
                        FontSize="Medium"
                        VerticalOptions="End" />

                </Grid>
                
            </Border>
            <!---->
            
            <Label
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin ="0,8,0,0"
                FontSize="24"
                Text="Meine Lagerorte" />

            <!-- Platzhalter für Lagerorterte -->
            <VerticalStackLayout
                    Padding="2"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Spacing="8">
                    
                    <!-- <BoxView BackgroundColor="LightGray" HeightRequest="50" />
                        <BoxView BackgroundColor="LightGray" HeightRequest="50" />
                        <BoxView BackgroundColor="LightGray" HeightRequest="50" /> -->
                    
                    
                 <!-- Gefrieerschrank-->
                <Border 
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Border.Shadow >
                        <Shadow
                            Opacity="0.2"
                            Radius="8"
                            Offset="0,4" />
                    </Border.Shadow>

                    <Grid
                        Padding="8"
                        ColumnDefinitions="48, *, 24"
                        ColumnSpacing="8"
                        RowDefinitions="24,24">
                        <!-- Icon(Hellblauer Kreis) -->
                        <Border
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            BackgroundColor="AliceBlue"
                            StrokeShape="RoundRectangle 45"
                            StrokeThickness="0">
                            <Image Source="dotnet_bot.png"/>

                        </Border>
                        <!-- Lagerortname-->
                        <Label
                        Grid.Column="1"
                        FontAttributes="Bold"
                        Text="Gefrierschrank"/>
                        <!-- Anzahl der Artikel im Lagerort -->
                        <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="3 Einträge"
                        TextColor="DarkGray" />
                        <!-- spitzer Pfeil nach rechts (Guillemt 'chevron right') -->
                        <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        Grid.RowSpan="2"
                        FontSize="36"
                        HorizontalOptions="End"
                        Text=">" 
                        TextColor="LightGray"/>

                    </Grid>

                </Border>

                <!--- Kühlschrank-->
                <Border
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow 
                            Opacity="0.2" 
                            Radius="4" 
                            Offset="0,4" />

                    </Border.Shadow>
                    <Grid
                        Padding="8"
                        ColumnDefinitions="48,*,24"
                        ColumnSpacing="8"
                        RowDefinitions="24,24">
                        <Border
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            BackgroundColor="AliceBlue"
                            StrokeShape="RoundRectangle 45"
                            StrokeThickness="0">
                            <Image Source="dotnet_bot.png"/>
                        </Border>
                        
                        <!-- Lagerortname -->
                        <Label
                            Grid.Column="1"
                            Grid.Row="0"
                            FontAttributes="Bold"
                            Text="Kühlschrank" />
                        <!-- Anzahl der Artikel im Lagerort -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="5 Einträge"
                            TextColor="DarkGray" />

                        <!-- spitzer Pfeil nach rechts (Guillemt 'chevron right') -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Grid.RowSpan="2"
                            FontSize="36"
                            HorizontalOptions="End"
                            Text=">"
                            TextColor="LightGray" />

                    </Grid>
                </Border>

                <!-- Vorratsschrank-->

                <Border
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="White"
                    StrokeThickness="0">
                    <Border.Shadow>
                        <Shadow
                            Opacity="0.2"
                            Radius="8"
                            Offset="0,4" />

                    </Border.Shadow>
                    
                    <Grid
                        Padding="8"
                        ColumnDefinitions="48,*,24"
                        ColumnSpacing="8"
                        RowDefinitions="24,24">
                        <!-- Icon (Hellblauer Kreis) -->
                        <Border 
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="2"
                            BackgroundColor="AliceBlue"
                            StrokeShape="RoundRectangle 45"
                            StrokeThickness="0">
                            <Image Source="dotnet_bot.png" />

                        </Border>
                        <!-- Lagerortname -->
                        <Label
                            Grid.Column="1"
                            FontAttributes="Bold"
                            Text="Vorratsschrank" />
                        <!-- Anzahl der Artikel im Lagerort -->
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="4 Einträge"
                            TextColor="DarkGray" />
                        <!-- spitzer Pfeil nach rechts (Guillemt 'chevron right') -->
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            Grid.RowSpan="2"
                            FontSize="36"
                            HorizontalOptions="End"
                            Text=">"
                            TextColor="LightGray" />


                    </Grid>
                </Border>
      

            </VerticalStackLayout>

            <!--  Eintrag hinzufügen  -->
            <Button
                Grid.Row="4"
                Grid.Column="0"
                BackgroundColor="#3d6dcc"
                BorderWidth="1"
                Text="Eintrag hinzufügen"/>
            
            <!-- Neuer Ort anlegen -->
            <Button
                Grid.Row="4"
                Grid.Column="1"
                BackgroundColor="White"
                BorderColor="#3d6dcc"
                BorderWidth ="1"
                Text ="Neuen Ort anlegen"
                TextColor="#3d6dcc" />


        </Grid>
        
    </ScrollView>

</ContentPage>
